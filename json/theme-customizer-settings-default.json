{
	"wp_defaults": {
			"title_tagline" : true,
			"colors" : true,
			"header_image" : true,
			"background_image" : true,
			"nav" : true,
			"static_front_page": true
	},
	"general": {
		"capability": "edit_theme_options",
		"css_hook": "my_css_generate_function"
	},
	"sections": {
		"colors": {
			"title": "Colors (WP)",
			"priority": 0,
			"setting": {
				"topbar_text_color": {
					"label": "Topbar text color",
					"type": "color",
					"default": "#000"
				},
				"topbar_bg_color": {
					"label": "Topbar background color",
					"type": "color",
					"default": "#000"
				},
				"header_text_color": {
					"label": "Header text color",
					"type": "color",
					"default": "#000"
				},
				"header_bg_color": {
					"label": "Header background color",
					"type": "color",
					"default": "#000"
				},
				"footer_text_color": {
					"label": "Footer text color",
					"type": "color",
					"default": "#000"
				},
				"footer_bg_color": {
					"label": "Footer background color",
					"type": "color",
					"default": "#000"
				}
			}
		},
		"etc_topbar": {
			"title": "Topbar",
			"priority": 1,
			"setting": {
				"topbar_show_langs": {
					"label": "Show langs selector",
					"type": "checkbox",
					"default": true
				},
				"topbar_show_search": {
					"label": "Show search",
					"type": "checkbox",
					"default": true
				}
			}
		},
		"etc_header": {
			"title": "Header",
			"priority": 2,
			"setting": {
				"header_logo": {
					"label": "Logo",
					"type": "image",
					"default": ""
				},
				"header_show_logo": {
					"label": "Show logo",
					"type": "checkbox",
					"default": true
				},
				"header_show_description": {
					"label": "Show description",
					"type": "checkbox",
					"default": true
				}
			}
		},
		"etc_footer": {
			"title": "Footer",
			"priority": 3,
			"setting": {
				"gmap_in_footer": {
					"label": "GMap",
					"type": "checkbox",
					"default": "true"
				}
			}
		},
		"etc_layout": {
			"title": "Layout",
			"priority": 4,
			"setting": {
				"topbar_show": {
					"label": "Show Topbar",
					"type": "checkbox",
					"default": true
				},
				"home_layout": {
					"default": "left",
					"label": "Home layout",
					"type": "layout-picker-3"
				},
				"inner_layout": {
					"default": "right",
					"label": "Page layout",
					"type": "layout-picker-4"
				}
			}
		},

		"gg_general_settings": {
			"title": "General",
			"priority": 10,
			"setting": {
				"general_keywords": {
					"transport": "postMessage",
					"default": "",
					"label": "通常のテキスト",
					"type": "option"
				},
				"general_analytics_code": {
					"transport": "postMessage",
					"default": "",
					"label": "テキストエリア",
					"type": "textarea"
				},
				"general_user_select": {
					"transport": "postMessage",
					"default": "",
					"label": "テキストエディター",
					"type": "text-editor"
				}
			}
		},
		"picker_settings": {
			"title": "ピッカー",
			"priority": 30,
			"setting": {
				"colorpicker": {
					"transport": "postMessage",
					"default": "",
					"label": "カラーピッカー",
					"type": "color"
				},
				"image": {
					"transport": "postMessage",
					"default": "",
					"label": "メディア",
					"type": "image"
				},
				"date": {
					"transport": "postMessage",
					"default": "",
					"label": "日付",
					"type": "date-picker"
				}
			}
		},
		"select_settings": {
			"title": "セレクトボックス",
			"priority": 30,
			"setting": {
				"category": {
					"transport": "postMessage",
					"default": "",
					"label": "カテゴリー",
					"type": "category-dropdown"
				},
				"google_font": {
					"transport": "postMessage",
					"default": "",
					"label": "Google Font",
					"type": "google-font"
				},
				"menu_dropdown": {
					"transport": "postMessage",
					"default": "",
					"label": "メニュー選択",
					"type": "menu-dropdown"
				},
				"post_dropdown": {
					"transport": "postMessage",
					"default": "",
					"label": "投稿選択",
					"type": "post-dropdown"
				},
				"post_type_dropdown": {
					"transport": "postMessage",
					"default": "",
					"label": "投稿選択",
					"type": "post-type-dropdown"
				},
				"taxonomy_dropdown": {
					"transport": "postMessage",
					"default": "",
					"label": "投稿タイプ",
					"type": "taxonomy-dropdown"
				},
				"user_dropdown": {
					"transport": "postMessage",
					"default": "",
					"label": "ユーザー",
					"type": "user-dropdown"
				}
			}
		}
	}
}
